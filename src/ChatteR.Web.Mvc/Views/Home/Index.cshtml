@model ChatteR.Web.Mvc.ViewModels.Home.IndexViewModel
@{
  string titlePrefix = string.IsNullOrWhiteSpace(Model.Chatroom) ? string.Empty : (Model.Chatroom + " &ndash; ");
}<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width"/>
  <title>@Html.Raw(titlePrefix)ChatteR</title>
  @Styles.Render("~/content/chatter")
</head>
<body>
  <p id="noscript">Please enable JavaScript</p>
  <div id="chatter">
    <div id="messages"></div>
    <form id="form" method="post">
      <input name="chatroom" type="hidden" value="@Model.Chatroom"/>
      <textarea name="message" placeholder="Message (CTRL-ENTER to send)" disabled></textarea>
      <input name="username" type="text" placeholder="Username (Leave blank to be anonymous)" disabled/>
      <input name="send" type="submit" value="Send" disabled/>
    </form>
  </div>
  <footer>
    <div id="stats"></div>
    <div id="users"></div>
    <div id="chatrooms"></div>
    <div id="version"></div>
  </footer>
  @Scripts.Render("~/scripts/jquery", "~/scripts/json2", "~/scripts/jquery.signalR")
  <script src="~/signalr/hubs"></script>
  <script>var baseUrl = "@Url.Content("~")";</script>
  @Scripts.Render("~/scripts/chatter")
</body>
</html>